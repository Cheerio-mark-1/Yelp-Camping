<% layout('/layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds"
      method="post"
      class="validated-forms"
      novalidate
    >
      <div class="form-group mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="campground[title]"
          id="title"
          aria-describedby="titlenote"
          class="form-control"
          aria-invalid="true"
        />
        <div id="titlenote" class="invalid-feedback" aria-label="title">
          Please Leave Title
        </div>
        <div class="valid-feedback" id="titlenote">Looks good</div>
      </div>

      <div class="form-group mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="campground[location]"
          id="location"
          aria-describedby="locationnote"
          class="form-control"
          required
        />

        <div class="invalid-feedback" id="location">Please provide a valid</div>
        <div class="valid-feedback" id="location">Looks good!</div>
      </div>

      <div class="form-group mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input
          type="text"
          name="campground[image]"
          id="image"
          aria-describedby="imagenote"
          class="form-control"
          required
        />
        <div class="invalid-feedback" id="imagenote">
          Please provide image url
        </div>
        <div class="valid-feedback" id="imagenote">Looks good!</div>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">price</label>

        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="number"
            name="campground[price]"
            required
            id="price"
            class="form-control"
            placeholder="0.00"
            aria-describedby="pricelabel"
          />
          <div class="invalid-feedback" id="pricelabel">
            Price should be greater than 0
          </div>
          <div class="valid-feedback" id="pricelabel">Looks good!</div>
        </div>
      </div>

      <div class="form-group mb-3">
        <label for="description" class="form-label">description</label>
        <textarea
          type="text"
          name="campground[description]"
          id="description"
          class="form-control"
          aria-describedby="desbody"
          required
        ></textarea>
        <div class="invalid-feedback" id="desbody">
          Please provide valid description
        </div>
        <div class="valid-feedback" id="desbody">Looks good!</div>
      </div>

      <button class="btn btn-success mb-3">Add Campground</button>
    </form>
    <a href="/campgrounds">All Campgrounds</a>
  </div>
</div>
